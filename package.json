{
  "name": "screenshotos",
  "version": "1.0.0",
  "description": "A high-performance screenshot tool for macOS",
  "main": "dist/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.json",
    "build:preload": "npx tsc --outDir ./dist src/preload.ts",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload && npm run test:files",
    "start": "npm run build && npx electron ./dist/main.js",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "test": "jest",
    "test:files": "node test-file-loading.js",
    "test:e2e": "playwright test --config=playwright-electron.config.js",
    "test:e2e:headed": "playwright test --config=playwright-electron.config.js --headed",
    "test:app": "node tests/e2e/electron-helper.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@emnapi/runtime": "^1.4.3",
    "@types/react-window": "^1.8.8",
    "active-win": "^8.2.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jimp": "^1.6.0",
    "lucide-react": "^0.525.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-window": "^1.8.11",
    "screenshot-desktop": "^1.15.1",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@playwright/mcp": "^0.0.29",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/screenshot-desktop": "^1.12.3",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.4",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "playwright": "^1.53.2",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.3.4",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.screenshotos.app",
    "productName": "ScreenshotOS",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "!**/*.map"
    ]
  }
}
